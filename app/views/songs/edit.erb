<html>

  <h1>Edit Songs</h1>

  <form action="/songs/<%= @song.slug %>" method="post" >
    <input type="hidden" name="_method" value="PATCH">
    
    <label for='Name'>Song Name</label>
    <input type='text' name='song[name]' id='Name' value="<%=@song.name%>">

    <label>Genre(s)</label>
    <% Genre.all.each do |genre| %>
        <li><input type='checkbox' name='genres[]' value='<%= genre.id %>' id='<%= genre.name %>'<%="checked" if @song.genres.include?(genre) %>><%= genre.name %></li>
        <% end %>
    
    <label>Artist Name</label>
    <input type='text' name='artist[name]' id='Artist Name' value="<%=@song.artist.name%>">
    

    <input type='submit' name='Save' id='Save'>
    
  </form>
</html>