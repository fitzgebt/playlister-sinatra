<h1>Add a new Song!</h1>
<form action='/songs' method='POST'>

    <label for='Name'>Song Name</label>
    <input type='text' name='song[name]' id='Name'>

    <label>Genre(s)</label>
    <% Genre.all.each do |genre| %>
        <li><input type='checkbox' name='genres[]' value='<%= genre.id %>' id='<%= genre.name %>'><%= genre.name %></li>
        <% end %>
    
    <label>Artist Name</label>
    <input type='text' name='artist[name]' id='Artist Name'>
    

    <input type='submit' name='Create' id='Create'>
</form>    